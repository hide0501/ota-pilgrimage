rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if resource.data.status == "approved"
                  || (request.auth != null && request.auth.uid == resource.data.authorUid);
      allow create: if request.auth != null
        && request.resource.data.authorUid == request.auth.uid
        && request.resource.data.status == "pending"
        && request.resource.data.workTitle is string
        && request.resource.data.body is string
        && request.resource.data.location is geopoint;
      allow update: if request.auth != null && request.auth.uid == resource.data.authorUid
        && !(request.resource.data.status in ["approved","rejected","flagged"]);
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorUid;
    }
    match /{document=**} { allow read, write: if false; }
  }
}
